rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{uid} {
      allow get: if true;
      allow list: if false;
      allow create: if request.auth != null && uid == request.auth.uid && request.resource.data.uid != null && uid == request.resource.data.uid;
      allow update: if request.auth != null && uid == request.auth.uid && request.resource.data.uid != null && uid == request.resource.data.uid;
      allow delete: if request.auth != null && uid == request.auth.uid && resource.data.uid != null && uid == resource.data.uid;
    }

    match /users/{uid}/pokemons/{index} {
      allow get: if 1 <= int(index) && int(index) <= 12;
      allow list: if false;
      allow create: if 1 <= int(index) && int(index) <= 12 && request.auth != null && uid == request.auth.uid && request.resource.data.uid != null && uid == request.resource.data.uid;
      allow update: if 1 <= int(index) && int(index) <= 12 && request.auth != null && uid == request.auth.uid && request.resource.data.uid != null && uid == request.resource.data.uid;
      allow delete: if 1 <= int(index) && int(index) <= 12 && request.auth != null && uid == request.auth.uid && resource.data.uid != null && uid == resource.data.uid;
    }

    match /pokemons/{pid}{
      allow get: if true;
      allow list: if request.query.limit <= 50;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    match /abilities/{aid}{
      allow get: if true;
      allow list: if request.query.limit <= 50;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
  }
}